<%
=begin%>
 <h1><%= t('.forgot_your_password') %></h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %> 
<%
=end%>


<%= bootstrap_devise_error_messages! %>
<div class="login-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a href="" class="h2"><b>◯◯オンラインサロン</a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">メールアドレスを入力してください。</p>
      <p class="login-box-msg">入力されたメールアドレス宛に、パスワード再設定URLを送付いたします。</p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="input-group mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", required: true, placeholder:"メールアドレス" %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.submit t('.send_me_reset_password_instructions'), class:"btn btn-primary btn-block" %>
          </div>
          <!-- /.col -->
        </div>
      <% end %>
      <p class="mt-3 mb-1">
        <%= render "users/shared/links" %>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>